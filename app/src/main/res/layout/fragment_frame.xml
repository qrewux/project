<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fourthLineTools.FrameFragment"
    android:background="#1F1B16">

    <LinearLayout
        android:id="@+id/bottomMenuForEditing"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        android:background="#322D27"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center"
        >


        <ImageView
            android:id="@+id/DeleteFrame"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/frameForm"
            android:layout_marginLeft="35dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_frame_form"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/frameFilling"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_marginRight="45dp"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_filling"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>



        <ImageView
            android:id="@+id/ApplyFrame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:src="@drawable/icon_apply"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_weight="1"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/uploadImage"
        android:layout_width="370dp"
        android:layout_height="450dp"
        android:layout_marginTop="30dp"
        android:background="#2F2921"
        android:backgroundTint="#2F2921"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/bottomMenuForEditing"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>