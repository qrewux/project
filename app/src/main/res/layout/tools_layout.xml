<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="42dp"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_brightness"
            android:id="@+id/brightnessView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Brightness"
            android:textAlignment="center"

            />

        <TextView
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_contrast"
            android:id="@+id/contrastView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Contrast"
            android:textAlignment="center"

            />

        <TextView
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_exposure"
            android:id="@+id/exposureView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Exposure"
            android:textAlignment="center"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout2"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">


        <TextView
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_saturation"
            android:id="@+id/saturationView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Saturation"
            android:textAlignment="center"

            />

        <TextView
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_highlights"
            android:id="@+id/highlightsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Highlights"
            android:textAlignment="center"

            />

        <TextView
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_sharpen"
            android:id="@+id/sharpenView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Sharpen"
            android:textAlignment="center"

            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/linearLayout3"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


        <TextView
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_warmth"
            android:id="@+id/warmthView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Warmth"
            android:textAlignment="center"

            />

        <TextView
            android:layout_marginRight="40dp"
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_shadows"
            android:id="@+id/shadowsView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Shadows"
            android:textAlignment="center"

            />

        <TextView
            android:textSize="12sp"
            android:drawableTop="@drawable/icon_vignette"
            android:id="@+id/vignetteView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="#EAE1D9"
            android:text="Vignette"
            android:textAlignment="center"

            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <TextView
            android:id="@+id/cropView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_crop"
            android:text="Crop"
            android:textAlignment="center"
            android:textColor="#EAE1D9"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/frameView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_frame"
            android:text="Frame"
            android:textAlignment="center"
            android:textColor="#EAE1D9"
            android:textSize="12sp"

            />

        <TextView
            android:id="@+id/rotateView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_rotate"
            android:text="Rotate"
            android:textAlignment="center"
            android:textColor="#EAE1D9"
            android:textSize="12sp"

            />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>